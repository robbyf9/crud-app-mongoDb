<!--Include Header-->
<%- include("includes/_header") %>
<!--/Include Header-->

    <!-- Main Site -->
        <main id="site-main">
            <div class="container">

                <div class="box-nav">
                    <a href="/" class="btn btn-secondary btn-sm">
                        <i class="fa fa-chevron-circle-left" aria-hidden="true"></i> All User
                    </a>
                </div>

                <div class="text-center">
                    <h2 class="text-dark">Edit User</h2>
                    <span class="text-muted">Use form below to edit users data.</span>
                </div>

                <!-- Form Handling-->
                    <div class="form">
                        <form action="/" method="POST" id="update_user" class="justify-content-center inline">
                            <input type="hidden" name="userId" value="<%= users._id %>">
                            <div class="mb-3">
                                <label for="name" class="form-label">Name</label>
                                <input type="text" class="form-control" id="name" placeholder="John Doe" value="<%= users.name %>">
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email address</label>
                                <input type="email" class="form-control" id="email" placeholder="name@example.com" value="<%= users.email %>">
                            </div>
                            <div class="mb-3">
                                <label for="gender" class="form-label">Gender</label><br>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="gender" id="male" value="Male" <%= users.gender == 'Male' ? 'checked' : '' %>>
                                    <label class="form-check-label" for="male">Male</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="gender" id="female" value="Female" <%= users.gender == 'Female' ? 'checked' : '' %> >
                                    <label class="form-check-label" for="female">Female</label>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Status</label><br>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="status" id="active" value="Active" <%= users.status == 'Active' ? 'checked' : '' %>>
                                    <label class="form-check-label" for="active">Active</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="status" id="inactive" value="Inactive" <%= users.status == 'Inactive' ? 'checked' : '' %>>
                                    <label class="form-check-label" for="inactive">Inactive</label>
                                </div>
                            </div>
                            

                            <button type="submit" class="btn btn-success col-md-12 btn-sm">
                                <i class="fas fa-save"> </i> Save 
                            </button>
                        </form>
                    </div>
                <!-- /Form Handling-->
            </div>
        </main>
        <!-- /Main Site-->

<!--Include Footer-->
<%- include('includes/_footer') %>
<!--/Include Footer-->