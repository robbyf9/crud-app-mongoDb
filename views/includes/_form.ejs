 <!-- Form Handling-->
 <div class="form">
    <form action="/" method="POST" id="add_user" class="justify-content-center inline">
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" placeholder="John Doe">
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control" id="email" placeholder="name@example.com">
        </div>
        <div class="mb-3">
            <label for="gender" class="form-label">Gender</label><br>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="male" id="male" value="Male">
                <label class="form-check-label" for="male">Male</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="female" id="female" value="Female">
                <label class="form-check-label" for="female">Female</label>
            </div>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Status</label><br>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="active" id="active" value="Active">
                <label class="form-check-label" for="active">Active</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inactive" id="inactive" value="Inactive">
                <label class="form-check-label" for="inactive">Inactive</label>
            </div>
        </div>
        

        <button type="submit" class="btn btn-success col-md-12 btn-sm">
            <i class="fas fa-save"> </i> Save 
        </button>
    </form>
</div>
<!-- /Form Handling-->